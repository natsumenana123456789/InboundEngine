# InboundEngine 設定ファイル

common:
  log_level: "INFO"
  file_paths:
    google_key_file: "gspread-key.json"

# 自動投稿Bot設定
auto_post_bot:
  slack_webhook_url: ${SLACK_WEBHOOK_URL}  # 環境変数から読み込み
  sheet_name: "投稿ストック"
  columns: ["ID", "最終投稿日時", "文字数", "本文", "画像/動画URL", "投稿可能", "投稿済み回数"]
  
  google_sheets_source:
    enabled: true
    spreadsheet_id: "1lgCn5iAiFT9PSr3vA3Tp1SePe0g3B9Xe1ppsr8bn2FA"
    worksheet_name: "都内メンエス"

  posting_settings:
    posts_per_account: 1
    max_posts_per_account: 1
    max_post_count: 3
    min_interval_hours: 24
    post_interval_seconds: 10
  
  schedule_settings:
    start_hour: 10
    end_hour: 22
    min_interval_minutes: 10
    schedule_file: "logs/schedule.txt"
    executed_file: "logs/executed.txt"
  
  media_settings:
    download_timeout: 60
    error_message_max_length: 100
    temp_file_cleanup: true
  
  text_settings:
    thread_padding: 10
    content_preview_length: 50
  
  twitter_accounts:
    - account_id: "ZaikerLong"
      consumer_key: ${TWITTER_ZAIKERLONG_CONSUMER_KEY}
      consumer_secret: ${TWITTER_ZAIKERLONG_CONSUMER_SECRET}
      access_token: ${TWITTER_ZAIKERLONG_ACCESS_TOKEN}
      access_token_secret: ${TWITTER_ZAIKERLONG_ACCESS_TOKEN_SECRET}
      google_sheets_source:
        enabled: true
        worksheet_name: "都内メンエス"
    - account_id: "hinataMaking"
      consumer_key: ${TWITTER_HINATAM_CONSUMER_KEY}
      consumer_secret: ${TWITTER_HINATAM_CONSUMER_SECRET}
      access_token: ${TWITTER_HINATAM_ACCESS_TOKEN}
      access_token_secret: ${TWITTER_HINATAM_ACCESS_TOKEN_SECRET}
      google_sheets_source:
        enabled: true
        worksheet_name: "都内セクキャバ"

# キュレーションBot設定（将来使用予定）
curate_bot:
  enabled: false

# 分析Bot設定（将来使用予定）
analyze_bot:
  enabled: false

